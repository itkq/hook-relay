{
  "name": "hook-relay",
  "version": "0.1.0",
  "description": "Relay for webhook events",
  "main": "dist/server/index.js",
  "bin": {
    "hook-relay-server": "./dist/server/index.js",
    "hook-relay-client": "./dist/client/index.js"
